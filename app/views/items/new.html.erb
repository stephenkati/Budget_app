<%= turbo_frame_tag "new_transaction" do %>
<% end %>

<div>
  <div>
    <%= link_to "<< Back", category_path(@category) %>
  </div>
  <%= form_with(model: @item, url: category_items_path(@category)) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
    </div>
    <div>
      <%= f.label :amount %>
      <%= f.number_field :amount, required: true %>
    </div>
    <div>
      <%= f.submit "Save" %>
    </div>
  <% end %>
</div>
