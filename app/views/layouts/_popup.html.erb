<div class=" w-full flex justify-center">

  <% if notice.present? %>
    <p class="notice py-2 px-3 bg-green-50 text-secondary font-medium rounded-lg inline-block">
      <%= notice %>
    </p>
  <% end %>
  
  <% if alert.present? %>
    <p class="alert py-2 px-3 bg-rose-50 text-red-700 font-medium rounded-lg inline-block">
      <%= alert %>
    </p>
  <% end %>

</div>